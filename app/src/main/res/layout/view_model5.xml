<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.rey.material.widget.ImageView
            android:id="@+id/iv_icon_model5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            tools:src="@drawable/albumset_preselected"
            />

        <TextView
            android:id="@+id/tv_view_model5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_icon_model5"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            tools:text="@string/s12"
            />

        <com.rey.material.widget.Spinner
            android:id="@+id/spinner_viewmodel5"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/tv_view_model5"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:minWidth="128dp"
            android:padding="8dp"
            android:gravity="center"
            app:spn_label="Spinner with arrow"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        />

</LinearLayout>